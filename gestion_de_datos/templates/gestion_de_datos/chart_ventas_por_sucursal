{% block content %}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cantidad de Ventas por Sucursal</title>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <style>
        .chart-container {
            width: 45%;
            margin: 20px auto;
        }
    </style>
</head>

<body>
    <div class="chart-container">
        <h2>Cantidad de Ventas por Sucursal</h2>
        <canvas id="pieChartVentas"></canvas>
    </div>

    <script>
        // Datos de ejemplo para cantidad de ventas por sucursal
        var sucursales = ["Sucursal A", "Sucursal B", "Sucursal C"];
        var ventasPorSucursal = [150, 100, 50];

        var pieCtxVentas = document.getElementById('pieChartVentas').getContext('2d');
        var pieChartVentas = new Chart(pieCtxVentas, {
            type: 'pie',
            data: {
                labels: sucursales,
                datasets: [{
                    label: 'Cantidad de Ventas',
                    data: ventasPorSucursal,
                    backgroundColor: ['#ff9f40', '#4bc0c0', '#9966ff']
                }]
            },
            options: {
                responsive: true,
                plugins: {
                    legend: {
                        position: 'top',
                    },
                    tooltip: {
                        callbacks: {
                            label: function (context) {
                                let label = context.label || '';
                                if (label) {
                                    label += ': ';
                                }
                                label += new Intl.NumberFormat('es-ES').format(context.raw);
                                return label;
                            }
                        }
                    }
                }
            }
        });
    </script>
</body>

</html>
